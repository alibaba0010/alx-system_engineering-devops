#!/usr/bin/env bash
# This script prints a "Best School" 10 times using while loop
#+ Print "Bad Luck" at the 4th iteration and "Good Luck" at the 8th iteration

count=0

while [ $count -lt 10 ]; do
    if [ $count -eq 3 ]; then
        echo "bad luck"
    elif [ $count -eq 7 ]; then
         echo "good luck"
    else
        echo "Best School"
    fi
    ((count++))
done
